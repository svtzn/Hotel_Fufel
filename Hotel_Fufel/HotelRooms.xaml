<Page x:Class="Hotel_Fufel.HotelRooms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_Fufel"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="790"
      Background="#FFFBF8"
      Title="HotelRooms">

    <Grid Width="790" Height="770">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="70,60,70,0">
            <Image Source="Resources/logo1.png" Height="64" Width="222" Margin="0,0,10,0" />
            <Button Name="Main" Click="Main_Click" Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Главная" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Name ="Rooms" Click="Rooms_Click" Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Бронирования" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Name="Contacts" Click="Contacts_Click" Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Контакты" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Name="Profile" Click="Profile_Click" Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Профиль" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="20,20,20,0">
                <ItemsControl ItemsSource="{Binding Rooms}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#D9D9D9" CornerRadius="12" Height="110" Width="360" Margin="10" Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="160"
                                            Height="90"
                                            CornerRadius="12"
                                            ClipToBounds="True">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding ImagePath}"
                                                        Stretch="UniformToFill"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel Orientation="Vertical" Margin="15,0,0,0">
                                        <TextBlock Text="{Binding ComfortLevel}" FontSize="16" FontWeight="Bold" FontFamily="Trebuchet MS"/>
                                        <TextBlock FontSize="12" TextWrapping="Wrap" Margin="0,4,0,4" FontFamily="Trebuchet MS">
                                             <Run Text="Wi‑Fi: "/><Run Text="{Binding WiFi, Converter={StaticResource BoolToYesNo}}"/>
                                             <LineBreak/>
                                             <Run Text="Кухня: "/><Run Text="{Binding Kitchen, Converter={StaticResource BoolToYesNo}}"/>
                                             <LineBreak/>
                                             <Run Text="Балкон: "/><Run Text="{Binding Balcony, Converter={StaticResource BoolToYesNo}}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Margin="0,0,0,8" FontFamily="Trebuchet MS">
                                            <Run Text="Комнат: "/><Run Text="{Binding RoomsAmount}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="{Binding PricePerNight, StringFormat='₽{0:F0}/ночь'}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,0,0,8" FontFamily="Trebuchet MS" FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
