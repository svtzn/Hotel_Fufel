<Page x:Class="Hotel_Fufel.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_Fufel"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="790"
      Title="WelcomePage"
      Background="#FFFBF8">

    <Grid Width="790" Height="770">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="70,60,70,0">
            <Image Source="Resources/logo1.png" Height="64" Width="222" Margin="0,0,10,0" />
            <Button Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Главная" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Бронирования" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Контакты" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
            <Button Style="{DynamicResource ButtonStyle2}" FontFamily="Trebuchet MS"
                    Content="Профиль" Height="64" Width="Auto" Margin="15,0,15,0" FontSize="14"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Name="WelcomeText" TextAlignment="Left" FontFamily="Calibri" FontSize="50" Width="500" Height="178" Margin="0,50,130,0" />
                <Button Content="ПЕРЕЙТИ К НОМЕРАМ" Style="{DynamicResource ButtonStyle1}" Width="180" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="78,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="0,40,0,0" >
                <Border Width="300" Height="250" Background="#DDDDDD" CornerRadius="18" Margin="78,0,0,0" HorizontalAlignment="Left">
                    <TextBlock Text="FufelHotel INFO" HorizontalAlignment="Left" Foreground="#222222" Margin="20,20,0,0" FontSize="20" FontFamily="Calibri" TextAlignment="Left" FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
